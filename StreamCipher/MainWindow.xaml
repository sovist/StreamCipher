<Window x:Class="StreamCipher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:StreamCipher.Controls"
        Title="StreamCipher" SizeToContent="WidthAndHeight" Icon="open.ico"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>       
        <StackPanel>
            <controls:Files/>
            <controls:CipherSettings/>          
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Content="Шифровать" HorizontalAlignment="Left" Margin="5" Click="codedOnClick"/>
                <TextBlock x:Name="TextBlockWorkTime" HorizontalAlignment="Center" Margin="5"/>
                <Button Content="Расшифровать" HorizontalAlignment="Right" Margin="5" Click="codedOnClick"/>                
            </Grid>
            <ProgressBar x:Name="ProgressBar" Margin="5" Height="20" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>