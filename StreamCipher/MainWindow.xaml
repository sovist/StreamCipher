<Window x:Class="StreamCipher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:StreamCipher.Controls"
        Title="MainWindow" SizeToContent="WidthAndHeight" 
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>       
        <StackPanel>
            <controls:Files/>
            <controls:CipherSettings/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Button Content="Шифровать" HorizontalAlignment="Left" Margin="5" Click="codedOnClick"/>
                <Button Content="Расшифровать" HorizontalAlignment="Right" Margin="5" Click="deCodedOnClick" Visibility="Collapsed"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
