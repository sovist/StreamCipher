<UserControl x:Class="StreamCipher.Controls.CipherSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"               
             DataContext="{Binding RelativeSource={ RelativeSource Self}}">

    <GroupBox Header="Инициализация байтов">
        <StackPanel>
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="10"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Нач. установка РСЛОС" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,0,5,0" VerticalAlignment="Center">
                    <TextBox  Text="{Binding Model.InitBytesRegister, Converter={StaticResource ByteArrayToStringConverter}, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                          TextChanged="registerOnTextChanged" HorizontalAlignment="Right" MinWidth="80" TextAlignment="Center"/>
                </StackPanel>
                <Button Grid.Row="0" Grid.Column="2" Content="Генерировать" HorizontalAlignment="Left" Click="genereteBytesForRegisterOnClick"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Смещение" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="2" Grid.Column="1" Margin="5,0,5,0" VerticalAlignment="Center">
                    <TextBox Text="{Binding Model.InitBytesShift, Converter={StaticResource ByteArrayToStringConverter}, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" 
                         TextChanged="shiftOnTextChanged" HorizontalAlignment="Right" MinWidth="80" TextAlignment="Center"/>
                </StackPanel>
                <Button Grid.Row="2" Grid.Column="2" Content="Генерировать" HorizontalAlignment="Left" Click="genereteBytesForShiftOnClick"/>
            </Grid>
            <ListView ItemsSource="{Binding Model.Sboxes}" HorizontalAlignment="Center" HorizontalContentAlignment="Center">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Параметры Sbox" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Генерировать" Click="generateNewSboxOnClick" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </GroupBox>
</UserControl>
